<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroHotel">
    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Best Hotel Finder"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cadastro De Hoteis"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nome do Hotel:"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/edt_nome_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Classificação do Hotel:"
                android:textSize="18sp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/rbt_estrela3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Estrelas" />

                <RadioButton
                    android:id="@+id/rbt_estrela4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 Estrelas" />

                <RadioButton
                    android:id="@+id/rbt_estrela5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Estrelas" />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Valor da diária - Segunda à sexta:"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/edt_valor_semanal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Valor da diária - Segunda à sexta (Fidelidade):"
                android:textSize="18sp"
                android:inputType="number" />

            <EditText
                android:id="@+id/edt_valor_semanal_fidelidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Valor da diária - Final de semana:"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edt_valor_finalsemana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Valor da diária -  final de semana (Fidelidade):"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edt_valor_finalsemana_fidelidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="number"/>
            <Button
                android:id="@+id/btm_cadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cadastrar"
                android:onClick="EnviaCadastro"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>