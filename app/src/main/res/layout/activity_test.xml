<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_DataEntrada"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/tv_dataEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_DataEntrada"
        android:layout_marginTop="40dp"
        android:hint="Ex: 09/09/2020"
        />

    <Button
        android:id="@+id/btn_DataEntrada"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_dataEntrada"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Selecione a data de Entrada" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_DataSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_DataEntrada"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:id="@+id/tv_dataSaida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ex: 09/10/2020"
            app:layout_constraintRight_toRightOf="@id/cl_DataSaida"
            app:layout_constraintTop_toTopOf="@id/cl_DataSaida"
            app:layout_constraintLeft_toLeftOf="@id/cl_DataSaida"
            />
        <Button
            android:id="@+id/btn_DataSaida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a data de SaÃ­da"
            app:layout_constraintTop_toBottomOf="@id/tv_dataSaida"
            app:layout_constraintRight_toRightOf="@id/cl_DataSaida"
            app:layout_constraintLeft_toLeftOf="@id/cl_DataSaida"
            app:layout_constraintBottom_toBottomOf="@id/cl_DataSaida"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>