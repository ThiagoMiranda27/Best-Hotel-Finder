<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuscaHotel">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Best Hotel Finder"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Selecione o tipo de Cliente"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rb_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIP" />

        <RadioButton
            android:id="@+id/rb_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regular" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Informe a data de Check In"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_DateInicio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sua data..."
        android:inputType="date"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/btn_DataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendario"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Informe a data de Check Out"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_DateFim"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sua data..."
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:inputType="date" />
        <Button
            android:id="@+id/btn_DataFim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendario"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buscarHotel"
        android:text="Enviar"
        android:layout_marginTop="20dp"/>
</LinearLayout>